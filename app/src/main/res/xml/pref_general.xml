<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_label"
        android:defaultValue="@string/pref_location_default"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="@string/pref_tempr_units_key"
        android:title="@string/pref_tempr_units_title"
        android:dialogTitle="@string/pref_tempr_units_dialogue_title"
        android:defaultValue="C"
        android:entries="@array/pref_tempr_units_list"
        android:entryValues="@array/temprUnitsArray"
        android:negativeButtonText="Cancel"
        android:positiveButtonText="@null" />








